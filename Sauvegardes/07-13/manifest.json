{
  "name": "Mado",
  "description": "Write and view your Markdown files",
  "version": "0.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
    "permissions": [
    {"fileSystem": ["write"]},
    "contextMenus",
    "storage"
    ],
  "icons": { 
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png" 
  },
  "commands" : {
    "cmdNew": {
      "suggested_key": {
        "default": "Ctrl+N"
      },
      "description": "Create new window"
    },
    "cmdSave": {
      "suggested_key": {
        "default": "Ctrl+S"        
      },
      "description": "Save the Markdown document"
    }
  }
}