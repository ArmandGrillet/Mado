{
  "name": "Mado",
  "description": "Write and view your Markdown files",
  "version": "0.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["app/background.js"]
    }
  },
    "permissions": [
    {"fileSystem": ["write"]},
    "contextMenus",
    "storage"
    ],
  "icons": { 
    "16": "app/icon16.png",
    "48": "app/icon48.png",
    "128": "app/icon128.png" 
  }
}