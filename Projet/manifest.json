{
  	"app": {
    	"background": {
      		"scripts": [
      			"app/background.js"
      		]
    	}
  	},
  	"manifest_version": 2,
  	"name": "Mado",
  	"version": "0.1",

  	"description": "Mado is a Markdown editor application. You can use it to take notes, write blog posts or edit documents.",
  	"file_handlers": {
		"text": {
        	"extensions": [
          		"md"
        	],
        	"title": "Mado"
      	}
	},
  	"icons": { 
      "16": "app/icon16.png",
      "48": "app/icon48.png",
    	"128": "app/icon128.png"
  	},  	
  	"minimum_chrome_version": "31",
  	"offline_enabled": true,
    "permissions": [
    	"app.window",
    	{
    		"fileSystem": [
    			"write", 
    			"retainEntries"
    		]
    	},
    	{
    		"mediaGalleries": [
    			"read", 
    			"allAutoDetected"
    		]
    	},
    	"storage",
    	"webview"
    ] 	
}